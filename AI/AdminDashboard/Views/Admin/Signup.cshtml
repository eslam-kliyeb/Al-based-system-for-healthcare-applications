@model RegisterDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/fontsSignup/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/Signupstyle.css">
    <title>Register</title>
</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signin-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="post" asp-action="Signup" class="register-form" id="login-form">

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="DisplayName" class="form-control" id="your_name" type="DisplayName" placeholder="Name" />
                                <span asp-validation-for="DisplayName"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="Email" class="form-control" id="your_name" type="Email" placeholder="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-phone-in-talk"></i></label>
                                <input asp-for="PhoneNumber" class="form-control" id="your_name" type="PhoneNumber" placeholder="Phone Number" />
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-pin"></i></label>
                                <input asp-for="City" class="form-control" id="your_name" type="City" placeholder="City" />
                                <span asp-validation-for="City"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-nature"></i></label>
                                <input asp-for="Street" class="form-control" id="your_name" type="Street" placeholder="Street" />
                                <span asp-validation-for="Street"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-gps-dot"></i></label>
                                <input asp-for="Country" class="form-control" id="your_name" type="Country" placeholder="Country" />
                                <span asp-validation-for="Country"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-border-color"></i></label>
                                <input asp-for="Qualification" class="form-control" id="your_name" type="Qualification" placeholder="Qualification" />
                                <span asp-validation-for="Qualification"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account-o"></i></label>
                                <input asp-for="Age" class="form-control" id="your_name" type="Age" placeholder="Age" />
                                <span asp-validation-for="Age"></span>
                            </div>

                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="Password" class="form-control" id="your_name" type="Password" placeholder="Password" />
                                <span asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group">
                                <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                                <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>

                    <div class="signup-image">
                        <figure><img src="~/css/images/about.png" alt="sing up image"></figure>
                        <a asp-action="Login" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>